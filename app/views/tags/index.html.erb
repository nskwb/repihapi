<% provide(:title, 'タグ一覧') %>

<div class="mt-6 my-4">
  <h1 class="text-center text-xl mb-4">タグ一覧</h1>
  <div class="search-form flex">
    <%= search_form_for @q, url: search_tags_path do |f| %>
      <i class="fas fa-search fa-lg"></i>
      <%= f.search_field :name_cont, placeholder: "タグ名", class: "mb-3 px-4 py-2 border border-gray-300 shadow-sm rounded" %>
      <%= f.submit '検索', class: "bg-green-500 font-light py-2 px-4 text-white rounded" %>
    <% end %>
  </div>
  <div class="tags">
    <%= render @tags %>
  </div>
</div>
<%= paginate @tags %>
