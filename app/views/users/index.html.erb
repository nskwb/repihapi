<div class="mt-6">
  <h1 class="text-center text-xl font-base mb-4 text-gray-700">ユーザー一覧</h1>
    <h2>ユーザー検索</h2>
    <%= search_form_for @q, url: search_users_path do |f| %>
      <%= f.label :name_cont, 'ユーザー名' %>
      <%= f.search_field :name_cont %>
      <%= f.submit '検索' %>
    <% end %>
    <div class="users">
      <ul class="grid grid-cols-2 md:grid-cols-4 gap-2">
        <%= render @users %>
      </ul>
    </div>
</div>
<%= paginate @users %>
