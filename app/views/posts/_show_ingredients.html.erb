<h2 class="text-center font-bold mb-2">材料</h2>
<div class="flex flex-row justify-end mr-6">
  <p class="font-bold">分量</p>
  <p class="pl-4"><%= post.serve %>食分</p>
</div>
<div>
  <ul class="text-center divide-y divide-gray-400">
    <% post.ingredients.each do |ingredient| %>
      <li class="flex flex-row justify-between py-3">
        <p class="font-bold"><%= ingredient.name %></p>
        <p><%= ingredient.amount %></p>
      </li>
    <% end %>
  </ul>
</div>
