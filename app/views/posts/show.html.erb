投稿の詳細ページ
  <p class=""><%= @post.name %></p>
  <p class=""><%= @post.user.name %></p>
  <p class="">説明：<%= @post.content %></p>
  <p class="">タンパク質：<%= @post.protein %>グラム</p>
  <p class="">脂肪：<%= @post.fat %>グラム</p>
  <p class="">炭水化物：<%= @post.carbo %>グラム</p>
  <p class="">カロリー：<%= @post.calorie %>グラム</p>
  <% @post.tags.each do |tag| %>
    <%= tag.name %>
  <% end %>
  <% if @post.image? %>
    <%= image_tag @post.image.url %>
  <% end %>
  <%= render 'posts/show_ingredients', post: @post %>
  <% if user_signed_in? %>
    <% if @post.user != current_user %>
      <% if @post.favorited_by?(current_user) %>
        <%= link_to "お気に入り解除", post_favorites_path(@post.id), method: :delete %>
      <% else %>
        <%= link_to "お気に入り", post_favorites_path(@post.id), method: :post %>
      <% end %>
    <% end %>
    <%= link_to "食事記録に追加", post_meal_records_path(@post.id), method: :post %>
  <% end %>
  <p><span>お気に入り数: </span><%= @post.favorites.count %></p>
  <% if user_signed_in? && @post.user == current_user  %>
    <%= link_to "編集", edit_post_path(@post) %>
    <%= link_to "削除", post_path(@post), method: :delete, data: { confirm: "本当に削除しますか？" } %>
  <% end %>

<% if user_signed_in? %>
  <%= render 'comments/form', { post: @post, comment: @comment } %>
<% end %>

<%= render @comments %>
