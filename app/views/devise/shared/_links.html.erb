<div class="flex flex-wrap items-center justify-around mt-4 p-4">
  <%- if controller_name != 'sessions' %>
  <%= link_to "ログイン", new_session_path(resource_name), class: "inline-block px-2 text-green-600 hover:text-green-900 text-lg" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "新規登録", new_registration_path(resource_name), class: "px-2 inline-block text-green-600 hover:text-green-900 text-lg" %>

  <%= link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path, method: :post, class: "px-2 inline-block text-green-600 hover:text-green-900 text-lg" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "px-2 inline-block font-light text-lg underline" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations'  %>
  <%= link_to "認証メールが届かない方はこちら", new_confirmation_path(resource_name), class: "px-2 inline-block font-light text-lg underline" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "px-2 inline-block font-light text-lg underline" %>
  <% end %>
