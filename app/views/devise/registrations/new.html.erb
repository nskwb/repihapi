<div class="max-w-md flex flex-col justify-center mx-auto shadow-xl">
  <div class="w-full mt-10 rounded">
    <h2 class="text-center text-xl">サインアップ</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field my-4">
        <%= f.label :name, class: "block text-gray-700 text-base font-light mb-2" %>
        <%= f.text_field :name, autofocus: true, class: "block w-full px-3 py-2 border border-gray-300 shadow-sm rounded" %>
      </div>

      <div class="field my-4">
        <%= f.label :email, class: "block text-gray-700 text-base font-light mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-3 py-2 border border-gray-300 shadow-sm rounded" %>
      </div>

      <div class="field my-4">
        <%= f.label :password, class: "block text-gray-700 text-base font-light" %>
        <% if @minimum_password_length %>
        <em class="block text-gray-700 text-base font-light mb-2">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "block w-full px-3 py-2 border border-gray-300 shadow-sm rounded" %>
      </div>

      <div class="field my-4">
        <%= f.label :password_confirmation, class: "block text-gray-700 text-base font-light mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full px-3 py-2 border border-gray-300 shadow-sm rounded" %>
      </div>
      <div class="actions text-center">
        <%= f.submit "登録", class: "w-full bg-green-500 hover:bg-green-700 font-light py-2 px-4 mt-4 rounded focus:outline-none focus:shadow-outline text-white text-lg" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
