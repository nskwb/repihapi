<div>
  <h2 class="text-center font-bold mb-2">コメント</h2>
  <%= form_with(model: [post, comment]) do |f| %>
    <div class="mb-2">
      <%= f.text_area :content, autofocus: true, class: "block w-full px-3 py-2 border border-gray-300 shadow-sm rounded" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "送信", class: "btn block cursor-pointer" %>
    </div>
  <% end %>
</div>
