<div class="mt-6">
  <h1 class="text-center text-xl font-base mb-4 text-gray-700">検索結果</h1>
  <p class="text-center text-md mb-4 text-gray-700">
    <%= @q.result.count %>人見つかりました
  </p>
  <div class="users">
    <ul class="grid grid-cols-2 md:grid-cols-4 gap-2">
      <%= render @users %>
    </ul>
  </div>

  <%= paginate @users %>

    <div class="mt-10 mb-4">
    <%= link_to "戻る", users_path, class:"text-lg font-light btn rounded-full bg-orange-500 hover:bg-orange-600" %>
  </div>
</div>
