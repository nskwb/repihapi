投稿の詳細ページ
  <span class=""><%= @post.name %></span>
  <span class=""><%= @post.user.name %></span>
  <span class=""><%= @post.content %></span>
  <span class=""><%= @post.protein %>グラム</span>
  <span class=""><%= @post.fat %>グラム</span>
  <span class=""><%= @post.carbo %>グラム</span>
  <span class=""><%= @post.calorie %>グラム</span>
  <% @post.tags.each do |tag| %>
    <%= tag.name %>
  <% end %>
  <% if @post.image? %>
    <%= image_tag @post.image.url %>
  <% end %>
  <% if user_signed_in? && @post.user != current_user %>
    <% if @post.favorited_by?(current_user) %>
      <%= link_to "お気に入り解除", post_favorites_path(@post.id), method: :delete %>
    <% else %>
      <%= link_to "お気に入り", post_favorites_path(@post.id), method: :post %>
    <% end %>
  <% end %>
  <p><span>お気に入り数: </span><%= @post.favorites.count %></p>
  <% if user_signed_in? && @post.user == current_user  %>
    <%= link_to "編集", edit_post_path(@post) %>
    <%= link_to "削除", post_path(@post), method: :delete, data: { confirm: "本当に削除しますか？" } %>
  <% end %>

<% if user_signed_in? %>
  <%= render 'comments/form', { post: @post, comment: @comment } %>
<% end %>

<%= render @comments %>
