<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post.id), method: :delete, remote: true, data: { "turbolinks" => false } do %>
    <i class="fas fa-star fa-lg fill-current text-yellow-500"></i>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post.id), method: :post, remote: true, data: { "turbolinks" => false } do %>
    <i class="far fa-star fa-lg fill-current text-yellow-500"></i>
  <% end %>
<% end %>
<span class="text-sm mr-4"><%= post.favorites.count %></span>
